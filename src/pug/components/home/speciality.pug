  var specialityeList = [
    ['Dentist', 'Padriatic', 'Cardiology'],
    ['Othopaedi', 'Traumatologi', 'Anestesiologi'],
    ['Reumatologi', 'Andrologi', 'Ortodonsia'],
    ['Dentist', 'Padriatic', 'Cardiology'],
